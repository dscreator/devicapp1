@using System.Security.Claims
@{
    ViewBag.Title = "Claims";
}
<h2>@ViewBag.Title</h2>

<h4>Claims present in the Claims Identity: @ViewBag.DisplayName</h4>

<table class="table table-hover table-striped table-condensed">
    <tr>
        <th>Identity Name</th>
        <th>Identity Label</th>
    </tr>
    @foreach (ClaimsIdentity id in ClaimsPrincipal.Current.Identities)
    {
        <tr>
            <td>@id.Name</td>
            <td>@id.Label</td>
        </tr>
    }
</table>


<table class="table table-hover table-striped table-condensed">
    <tr>
        <th>Claim Type</th>
        <th>Claim Value</th>
    </tr>

    @foreach (Claim claim in ClaimsPrincipal.Current.Claims)
    {
        <tr>
            <td>@claim.Type</td>
            <td>@claim.Value</td>
        </tr>
    }
</table>



